# Configuration de production pour docs.normx-ai.com
# GD-IA-Comptable

# Environment
ENV=production
DEBUG=false
ENVIRONMENT=production

# Base de données PostgreSQL
DATABASE_URL=postgresql://normx_docs_user:VOTRE_MOT_DE_PASSE_SECURISE@localhost:5432/normx_docs_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# Sécurité - GÉNÉRER UNE NOUVELLE CLÉ !
# python3 -c 'import secrets; print(secrets.token_urlsafe(32))'
SECRET_KEY=GENERER_UNE_CLE_UNIQUE_32_CHARS_MIN
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# Redis - Utiliser des DB différentes pour chaque app
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# CORS
CORS_ORIGINS=["https://docs.normx-ai.com"]

# Hosts autorisés
ALLOWED_HOSTS=docs.normx-ai.com

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=notifications@normx-ai.com
SMTP_PASSWORD=VOTRE_MOT_DE_PASSE_APP
SMTP_FROM_EMAIL=noreply@normx-ai.com
SMTP_FROM_NAME=NormX Docs

# Logs
LOG_LEVEL=INFO
LOG_FILE_PATH=/var/log/normx-ai/docs

# Uploads
UPLOAD_MAX_SIZE_MB=20
UPLOAD_DIRECTORY=/var/lib/normx-ai/docs/uploads
UPLOAD_ALLOWED_EXTENSIONS=.pdf,.doc,.docx,.xls,.xlsx,.png,.jpg,.jpeg

# 2FA
TWO_FACTOR_ISSUER=NormX Docs

# API
API_TIMEOUT=120