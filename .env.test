# Configuration de test pour l'application
# NE PAS UTILISER EN PRODUCTION

# Base de données de test (SQLite en mémoire)
DATABASE_URL=sqlite:///:memory:

# Configuration Redis de test (optionnel pour les tests)
REDIS_URL=redis://localhost:6379/15

# JWT
SECRET_KEY=test-secret-key-do-not-use-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS pour les tests
CORS_ORIGINS=http://localhost:3000

# Environnement
ENVIRONMENT=test

# Uploads
UPLOAD_MAX_SIZE_MB=10
UPLOAD_ALLOWED_EXTENSIONS=.pdf,.doc,.docx,.xls,.xlsx,.png,.jpg,.jpeg
UPLOAD_DIRECTORY=/tmp/test_uploads

# Logs
LOG_LEVEL=DEBUG
LOG_FILE_PATH=/tmp/test_logs

# 2FA
TWO_FACTOR_ISSUER=Test App