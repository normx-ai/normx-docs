# Environment
ENV=production
DEBUG=False

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Security - CHANGEZ CES VALEURS !
SECRET_KEY=your-secret-key-here-change-this
JWT_SECRET=your-jwt-secret-here-change-this
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=30

# CORS - Ajustez selon vos domaines
CORS_ORIGINS=https://yourdomain.com,http://localhost:3000
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=Accept,Content-Type,Authorization

# Allowed hosts
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,localhost,127.0.0.1

# Redis
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_TRACK_STARTED=True
CELERY_TASK_TIME_LIMIT=1800
CELERY_BEAT_SCHEDULE_FILENAME=celerybeat-schedule

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@yourdomain.com
SMTP_FROM_NAME=NormX Docs

# SMS (Africa's Talking) - Optionnel
SMS_ENABLED=False
AFRICASTALKING_USERNAME=
AFRICASTALKING_API_KEY=
AFRICASTALKING_SENDER_ID=

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Upload
MAX_UPLOAD_SIZE_MB=10
ALLOWED_UPLOAD_EXTENSIONS=.pdf,.doc,.docx,.xls,.xlsx,.png,.jpg,.jpeg
UPLOAD_DIR=uploads

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_SIZE_MB=10
LOG_BACKUP_COUNT=5

# Rate limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_DEFAULT=100/hour
RATE_LIMIT_STORAGE_URL=redis://localhost:6379/3

# Session
SESSION_COOKIE_NAME=normx_session
SESSION_COOKIE_MAX_AGE=86400
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=lax

# Frontend URL
FRONTEND_URL=https://yourdomain.com

# API Settings
API_V1_STR=/api/v1
PROJECT_NAME=NormX Docs
